{
	"name": "svelte-twc",
	"version": "0.4.3",
	"description": "Make reusable Tailwind CSS + Svelte components easily",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"browser": "./dist/index.js",
			"default": "./dist/server.js"
		}
	},
	"scripts": {
		"build": "tsx scripts/build.ts && tsc",
		"lint": "prettier --check .",
		"fmt": "prettier --write .",
		"test": "pnpm -r test",
		"changeset": "changeset",
		"release": "pnpm build && pnpm changeset publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ssssota/svelte-twc.git"
	},
	"keywords": [
		"svelte",
		"tailwind",
		"css",
		"twc"
	],
	"author": "TOMIKAWA Sotaro <tommysouta@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ssssota/svelte-twc/issues"
	},
	"homepage": "https://github.com/ssssota/svelte-twc#readme",
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.9",
		"@types/node": "^22.7.6",
		"esbuild": "^0.24.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"svelte": "5.0.0-next.269",
		"tsx": "^4.19.1",
		"typescript": "^5.6.3",
		"vite": "^5.4.9"
	},
	"peerDependencies": {
		"svelte": ">=5.0.0-next.269",
		"vite": ">=2.0.0"
	},
	"files": [
		"dist"
	],
	"packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228"
}
