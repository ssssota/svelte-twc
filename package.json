{
	"name": "svelte-twc",
	"version": "1.0.0",
	"description": "Make reusable Tailwind CSS + Svelte components easily",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"browser": "./dist/index.js",
			"default": "./dist/server.js"
		}
	},
	"scripts": {
		"build": "tsx scripts/build.ts && tsc",
		"lint": "prettier --check .",
		"fmt": "prettier --write .",
		"test": "pnpm -r test",
		"changeset": "changeset",
		"release": "pnpm build && pnpm changeset publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ssssota/svelte-twc.git"
	},
	"keywords": [
		"svelte",
		"tailwind",
		"css",
		"twc"
	],
	"author": "TOMIKAWA Sotaro <tommysouta@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ssssota/svelte-twc/issues"
	},
	"homepage": "https://github.com/ssssota/svelte-twc#readme",
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.11",
		"@types/node": "^22.10.7",
		"esbuild": "^0.24.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.19.0",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vite": "^6.0.7"
	},
	"peerDependencies": {
		"svelte": ">=5.16.0"
	},
	"files": [
		"dist"
	],
	"packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0"
}
