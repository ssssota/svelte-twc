{
	"name": "svelte-twc",
	"version": "0.2.0",
	"description": "Make reusable Tailwind CSS + Svelte components easily",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"browser": "./dist/index.js",
			"default": "./dist/server.js"
		}
	},
	"scripts": {
		"build": "tsx scripts/build.ts && tsc",
		"lint": "prettier --check .",
		"fmt": "prettier --write .",
		"test": "pnpm -r test",
		"changeset": "changeset",
		"release": "pnpm build && pnpm changeset publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ssssota/svelte-twc.git"
	},
	"keywords": [
		"svelte",
		"tailwind",
		"css",
		"twc"
	],
	"author": "TOMIKAWA Sotaro <tommysouta@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ssssota/svelte-twc/issues"
	},
	"homepage": "https://github.com/ssssota/svelte-twc#readme",
	"packageManager": "pnpm@9.1.1",
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.1",
		"@types/node": "^20.12.7",
		"esbuild": "^0.20.2",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.2.3",
		"svelte": "5.0.0-next.136",
		"tsx": "^4.7.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.10"
	},
	"peerDependencies": {
		"svelte": ">=5.0.0-next.136",
		"vite": ">=2.0.0"
	},
	"files": [
		"dist"
	]
}
